# Development Dockerfile with hot-reloading
FROM rust:1.93-slim

WORKDIR /app

# Install development dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    postgresql-client \
    xvfb \
    ffmpeg \
    xterm \
    thunar \
    dbus-x11 \
    wmctrl \
    openbox \
    && rm -rf /var/lib/apt/lists/*

# Install cargo-watch for hot-reloading
RUN cargo install cargo-watch

# Copy manifests
COPY Cargo.toml ./
COPY Cargo.lock* ./

# Create dummy main to cache dependencies (skip if project is minimal)
# RUN mkdir src && \
#     echo "fn main() {}" > src/main.rs && \
#     cargo build && \
#     rm -rf src

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run with hot-reloading
CMD ["cargo", "watch", "-x", "run"]
