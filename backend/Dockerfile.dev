# Development Dockerfile with hot-reloading
FROM rust:1.93-slim

WORKDIR /app

# Install development dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    postgresql-client \
    xvfb \
    ffmpeg \
    xterm \
    thunar \
    dbus-x11 \
    wmctrl \
    openbox \
    xdotool \
    libxcb1-dev \
    libxcb-render0-dev \
    libxcb-shape0-dev \
    libxcb-xfixes0-dev \
    libgtk-3-0 \
    libx11-6 \
    libxrandr2 \
    libxi6 \
    libxcursor1 \
    libxinerama1 \
    libxkbcommon-x11-0 \
    libxkbcommon0 \
    libglib2.0-dev \
    libgstreamer1.0-dev \
    libgstreamer-plugins-base1.0-dev \
    libgstreamer-plugins-bad1.0-dev \
    gstreamer1.0-tools \
    gstreamer1.0-x \
    gstreamer1.0-plugins-good \
    gstreamer1.0-plugins-bad \
    gstreamer1.0-plugins-ugly \
    && rm -rf /var/lib/apt/lists/*

# Install cargo-watch for hot-reloading
RUN cargo install cargo-watch


# Set target directory for build cache
ENV CARGO_TARGET_DIR=/app/target

# Expose port
EXPOSE 8080




# Ensure /tmp/ipc exists and is world-writable for IPC server
RUN mkdir -p /tmp/ipc && chmod 1777 /tmp/ipc

# Use host user for permissions
ARG USER_ID=1000
ARG GROUP_ID=1000
RUN useradd -m -u $USER_ID -g $GROUP_ID sandbox || true
RUN chown -R $USER_ID:$GROUP_ID /usr/local/cargo
USER sandbox

# Run with hot-reloading
CMD ["cargo", "watch", "-x", "run"]
