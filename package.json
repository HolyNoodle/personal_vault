{
  "name": "secure-sandbox-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Secure file sandbox server with WebRTC streaming and Landlock LSM",
  "workspaces": [
    "frontend/web"
  ],
  "scripts": {
    "predev": "node scripts/setup-env.js development",
    "dev": "docker compose -f docker-compose.dev.yml up",
    "dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "dev:detach": "docker compose -f docker-compose.dev.yml up -d",
    "dev:stop": "docker compose -f docker-compose.dev.yml down",
    "dev:clean": "docker compose -f docker-compose.dev.yml down -v",
    "dev:logs": "docker compose -f docker-compose.dev.yml logs -f",

    "preprod": "node scripts/setup-env.js production",
    "prod": "docker compose -f docker-compose.prod.yml up -d",
    "prod:build": "docker compose -f docker-compose.prod.yml up --build -d",
    "prod:stop": "docker compose -f docker-compose.prod.yml down",
    "prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "prod:logs:backend": "docker compose -f docker-compose.prod.yml logs -f backend",

    "secrets:generate": "node scripts/generate-secrets.js",

    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "logs": "pm2 logs",
    "status": "pm2 status",

    "check": "cargo check --workspace",
    "clippy": "cargo clippy --workspace -- -D warnings",
    "test": "cargo test --workspace",
    "fmt": "cargo fmt --all -- --check",
    "wasm": "cargo build -p file-explorer --target wasm32-unknown-unknown",
    "wasm:release": "cargo build -p file-explorer --target wasm32-unknown-unknown --release",

    "migrate": "cd /app/backend && sqlx migrate run",
    "migrate:revert": "cd /app/backend && sqlx migrate revert",
    "db:reset": "docker compose -f docker-compose.dev.yml down -v postgres && npm run dev:detach",

    "frontend:build": "cd frontend/web && npm run build",
    "frontend:install": "cd frontend/web && npm install"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "rust",
    "webrtc",
    "landlock",
    "sandbox",
    "security",
    "monorepo"
  ],
  "author": "Sandbox Team",
  "license": "MIT"
}
